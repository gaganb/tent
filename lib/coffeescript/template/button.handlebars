<div 	{{bindAttr class="view.classes view.buttonClass" disabled="view.isDisabled"}} 
		{{action triggerAction target="view"}}
		{{bindAttr data-toggle="view.dataToggle"}}
		role="button"
		>
  <i {{bindAttr class="view.iconClass"}} /> {{loc view.label}}
  {{#if view.hasOptions}}
  	 <span class="caret"></span>
  {{/if}}
</div>
{{#if view.hasOptions}}
	{{collection contentBinding="view._options" tagName="ul" classNames="dropdown-menu" itemViewClass="Tent.ButtonOptions"}}
{{/if}}