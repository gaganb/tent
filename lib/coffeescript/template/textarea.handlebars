<label class="control-label">{{view.label}}<span class='tent-required'/></label>
<div class="controls">
  <div class="input-prepend">
    {{#if view.hasPrefix}}  
      <span class="add-on">{{view.prefix}}</span>
    {{/if}}     
    {{#if view.textDisplay}}
      <span class="text-display">{{view.formattedValue}}</span>
    {{else}}
      {{view Tent.TextareaInput 
          classBinding="view.inputSizeClass" 
          valueBinding="view.formattedValue" 
          placeholderBinding="view.placeholder"
          rowsBinding="view.rows"
          colsBinding="view.cols"
      }}
    {{/if}}
    {{#if view.tooltip}}
      <a href="#" rel="tooltip" data-placement="right" {{bindAttr data-original-title="view.tooltip"}}></a>
    {{/if}}
    {{#if view.hasHelpBlock}}
      <span class="help-block">{{view.helpBlock}}</span>
    {{/if}}
    {{#if view.hasErrors}}
      {{#each error in view.validationErrors}}
        <span class="help-inline">{{view.error}}</span>
      {{/each}}
    {{/if}}  
  </div>
  
  
  

</div>
